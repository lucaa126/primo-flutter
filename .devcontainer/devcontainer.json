{
    "name": "Flutter Env",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "customizations": {
        "vscode": {
            //installiamo estensioni vscode
            "extensions": [
                "Dart-Code.flutter",
                "Dart-Code.dart-code"
            ]
        }
    },
    //installiamo le dipendenze e scarichiamo Flutter
    "updateContentCommand": "sudo apt-get update && sudo apt-get install -y xz-utils zip unzip && git clone https://github.com/flutter/flutter.git -b stable --depth 1 /home/vscode/flutter",
    //aggiungiamo Flutter al PATH (ora funziona il comando 'flutter')
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/vscode/flutter/bin"
    }
}